/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
} 
.container-x{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

/*第三功能 通用箭头*/
/*箭头*/
.arrow{
  display: flex;
  justify-content: space-between;/*两端对齐*/
  align-items: center;
}
.arrow::after{
  content:"";
  width:20rpx;    /*箭头正方形加边框*/
  height:20rpx;
  border-top:5rpx solid #ccc;
  border-right:5rpx solid #ccc;
  transform: rotate(45deg);
  margin-right:4.3%;
}
.ml3-5{
  margin-left: 3.5%
}
.mt1-5{
  margin-top: 1.5%;
}